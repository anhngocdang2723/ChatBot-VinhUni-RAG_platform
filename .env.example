# ==================================================
# CORE API KEYS (REQUIRED)
# ==================================================

# Pinecone Vector Database (handles embeddings internally)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1

# Alibaba Cloud DashScope (Qwen3-Max for LLM generation)
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# JWT Authentication
SECRET_KEY=your_secret_key_min_32_characters_long_random_string

# ==================================================
# DATABASE & STORAGE
# ==================================================

# SQLite Database (auto-created)
DATABASE_URL=sqlite:///./data/chatbot_rag.db

# File Storage Paths
UPLOAD_DIR=data/uploads
OUTPUT_DIR=data/outputs

# ==================================================
# LLM CONFIGURATION
# ==================================================

# LLM Provider (qwen for Qwen3-Max)
LLM_PROVIDER=qwen

# Embedding Model (handled by Pinecone integrated inference)
# Options: llama-text-embed-v2, multilingual-e5-large
EMBEDDING_MODEL=llama-text-embed-v2

# ==================================================
# DOCUMENT PROCESSING
# ==================================================

# Text Chunking
DEFAULT_CHUNK_SIZE=1000
DEFAULT_CHUNK_OVERLAP=200

# ==================================================
# PINECONE INDEX
# ==================================================

# Index/Collection Name
DEFAULT_INDEX=truong-dai-hoc-vinh

# ==================================================
# APPLICATION SETTINGS (OPTIONAL)
# ==================================================

# API Configuration
API_PORT=8000
DEBUG=False

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
